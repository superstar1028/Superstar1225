{
  "name": "firestore-stripe-payments-js",
  "version": "0.0.1",
  "description": "Client SDK for the firestore-stripe-payments Firebase Extension",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "scripts": {
    "api-extractor": "api-extractor run --verbose",
    "api-extractor:local": "npm run build && api-extractor run --local --verbose",
    "build": "tsc",
    "postbuild": "node ./postbuild.js",
    "test": "firebase emulators:exec --only firestore,auth --project fake-project-id 'npm run test:unit'",
    "test:unit": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha test/**/*.spec.ts"
  },
  "keywords": [
    "firebase",
    "payments",
    "subscriptions",
    "stripe"
  ],
  "author": "Stripe (https://stripe.com/)",
  "contributors": [
    "Firebase <firebase-support@google.com> (https://firebase.google.com/)"
  ],
  "license": "Apache-2.0",
  "files": [
    "lib/",
    "LICENSE",
    "NOTICE.txt",
    "README.md"
  ],
  "devDependencies": {
    "@microsoft/api-extractor": "^7.18.7",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/chai-like": "^1.1.1",
    "@types/mocha": "^9.0.0",
    "@types/sinon": "^10.0.2",
    "@types/sinon-chai": "^3.2.5",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-like": "^1.1.1",
    "firebase-tools": "^9.18.0",
    "jsdom": "^17.0.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^9.1.1",
    "replace-in-file": "^6.2.0",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "@firebase/app": "^0.7.0",
    "@firebase/auth": "^0.17.2",
    "@firebase/firestore": "^3.0.1"
  }
}
