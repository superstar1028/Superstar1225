    "stripe",
    "payments"
  ],
  "author": "Stripe (https://stripe.com/)",
  "license": "Apache-2.0",
  "devDependencies": {
    "@microsoft/api-extractor": "^7.18.7",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/chai-like": "^1.1.1",
    "@types/mocha": "^9.0.0",
    "@types/sinon": "^10.0.2",
    "@types/sinon-chai": "^3.2.5",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-like": "^1.1.1",
    "firebase-tools": "^9.18.0",
    "mocha": "^9.1.1",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "@firebase/app": "^0.7.0",
